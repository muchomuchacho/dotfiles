#!/usr/bin/python3

import sys
import datetime

from pathlib import Path

template = """# {date}

## Checklist

* [ ] Drink water
* [ ] Take a vitamins
* [ ] Eat breakfast
* [ ] Stretch
* [ ] Exercise
* [ ] Meditate
* [ ] Read

## Todo

* Pay a visit to [Read a Paper](../Read a Paper)
* Check the [Inbox](../home#Contents#Inbox#New)
* Write down some [Ideas](../home#Ideas)

## Notes"""

# Get the date from datetime or from the filename
date = (datetime.date.today() if len(sys.argv) < 2
        else Path(sys.argv[1]).stem)

print(template.format(date=date))
