#!/usr/bin/python3

import sys
import datetime

from pathlib import Path

template = """= {date} =

## Checklist

* [ ] Drink water
* [ ] Take a vitamins
* [ ] Eat breakfast
* [ ] Stretch
* [ ] Exercise
* [ ] Meditate

## Todo
* Pay a visit to [[../Paper Read]]

## Notes
"""

date = (datetime.date.today() if len(sys.argv) < 2
        # Expecting filename in YYYY-MM-DD.md format
        else Path(sys.argv[1]).stem)

print(template.format(date=date))
